{
  "name": "auction-platform",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently -n \"API,WEB,ADMIN\" -c \"blue,green,yellow\" \"npm run start:dev --workspace=apps/api\" \"npm run dev --workspace=apps/web\" \"npm run dev --workspace=apps/admin\"",
    "dev:api": "npm run start:dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "test": "npm run test --workspaces",
    "install:all": "npm install && npm install --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": "true",
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
